<section id="invoices">
	<h3>Invoices</h3>
	<%= link_to("+ Create New Invoice", {:controller => "invoices", :action => "new"}, :class => "btn btn-default") %>

	<br />
	<br />

	<table class="table table-bordered table-condensed table-striped">
		<tr>
			<th>#</th>
			<th>Client</th>
			<th>Amount</th>
			<th>Status</th>
			<th>Actions</th>
		</tr>
		<% @invoices.each do |invoice| %>
			<tr>
				<td><%= link_to(invoice.invoice_number, {:controller => "invoices", :action => "show", :id => invoice.id}) %></td>
				<% client_this_belongs_to = Client.find_by(id: invoice.client_id) %>
				<td><%= link_to(client_this_belongs_to.name, {:controller => "invoices", :action => "show", :id => invoice.id}) %></td>
				<td><%= invoice.amount %></td>

				<% if invoice.status == "draft" %>
					<td class="invoice-status-draft">
				<% elsif invoice.status == "sent" %>
					<td class="invoice-status-sent">
				<% elsif invoice.status == "paid" %>
					<td class="invoice-status-paid">
				<% end %>
					<b><%= invoice.status.to_s.capitalize %></b>
				</td>
				
				<td class="actions">
					<%= link_to("Show", {:controller => "invoices", :action => "show", :id => invoice.id}, :class => "btn btn-default") %>
					<%= link_to("Edit", {:controller => "invoices", :action => "edit", :id => invoice.id}, :class => "btn btn-default") %>
					<%= link_to("Delete", {:controller => "invoices", :action => "delete", :id => invoice.id}, :class => "btn btn-danger") %>
				</td>
			</tr>
		<% end %>
	</table>

</section>

<section id="clients">
	<h3>Clients</h3>
	<%= link_to("+ Create New Client", {:controller => "clients", :action => "new"}, :class => "btn btn-default") %>

	<br />
	<br />

	<table class="table table-bordered table-condensed table-striped">
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Address</th>
			<th>Company</th>
			<th>Actions</th>
		</tr>
		<% @clients.each do |client| %>
			<tr>
				<td><%= link_to(client.name, {:controller => "clients", :action => "show", :id => client.id}) %></td>
				<td><a href="mailto:<%= client.email %>"><%= client.email %></a></td>
				<td><%= client.phone %></td>
				<td><%= client.address %></td>
				<td><%= client.company %></td>
				<td class="actions">
					<%= link_to("Show", {:controller => "clients", :action => "show", :id => client.id}, :class => "btn btn-default") %>
					<%= link_to("Edit", {:controller => "clients", :action => "edit", :id => client.id}, :class => "btn btn-default") %>
					<%= link_to("Delete", {:controller => "clients", :action => "delete", :id => client.id}, :class => "btn btn-danger") %>
				</td>
			</tr>
		<% end %>
	</table>

</section>
