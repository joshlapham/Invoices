<%= wicked_pdf_stylesheet_link_tag "application" %>

<% client_this_belongs_to = Client.find_by(id: @invoice.client_id) %>

<section class="container">

	<section class="row">

		<section class="col-md-6">
		</section>

		<section class="col-md-6" id="pdf-invoice-number">
			<h2>Tax Invoice #<%= @invoice.invoice_number %></h2>
		</section>

	</section><!-- /row -->

	<section class="row">

		<section class="col-md-6" id="pdf-biller-details">
		</section>

		<section class="col-md-6" id="pdf-invoice-details">

			<table class="table table-condensed pdf-invoice-details-table">
				<tr>
					<th>Bill To:</th>
					<td><%= client_this_belongs_to.name %> (<%= client_this_belongs_to.email %>)</td>
				</tr>
				<tr>
					<th>Tax Invoice Date:</th>
					<td><%= @invoice.date_sent %></td>
				</tr>
				<tr>
					<th>Due Date:</th>
					<td><%= @invoice.date_due %></td>
				</tr>
				<tr>
					<th>Amount Due:</th>
					<td><b><%= @invoice.amount %></b></td>
				</tr>
			</table>
			
		</section>

	</section><!-- /row -->

	<section class="row">

		<section class="col-md-12" id="pdf-invoice-items">

			<table class="table table-condensed">

				<tr>
					<th>Description</th>
					<th class="pdf-invoice-details-table">Qty</th>
					<th class="pdf-invoice-details-table">Cost</th>
				</tr>
				<% @items.each do |item| %>
					<tr>
						<td><%= item.description %></td>
						<td class="pdf-invoice-details-table"><%= item.quantity %></td>
						<td class="pdf-invoice-details-table"><%= item.unit_cost %></td>
					</tr>
				<% end %>

				<tr>
					<th>&nbsp;</th>
					<td>&nbsp;</td>
					<td>&nbsp;</td>
				</tr>

				<tr>
					<th>Total:</th>
					<td></td>
					<td class="pdf-invoice-details-table"><b><%= @invoice.amount %></b></td>
				</tr>

			</table>

		</section>

	</section><!-- /row -->

	<section>

		<section class="col-md-12" id="pdf-payment-options">
		</section>

	</section><!-- /row -->

</section>
