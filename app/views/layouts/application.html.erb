<!DOCTYPE html>
<html>
<head>

  <title>Invoices</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>

<body>

	<section class="container">

		<header id="header" class="row">
			<section class="col-md-9">
				<h1>Invoices</h1>
			</section>

			<section class="col-md-3" id="menu-buttons">
				<% if session[:user_id] %>
					<p class="welcome-current-user">Welcome, <%= current_user.email %></p>
					<%= link_to("Logout", {:controller => "sessions", :action => "logout"}, :class => "btn btn-info") %>
				<% end %>
			</section>
		</header><!-- /header -->

		<hr>

		<% if !flash[:notice].blank? %>
			<section class="alert alert-info">
			<%= flash[:notice] %>
			</section>
		<% end %>

		<%= yield %>

		<footer class="footer">
			<p class="copyright text-muted">&copy; <%= Time.now.year %> <a href="http://joshlapham.com" target="_blank">Josh Lapham</a>. Heaps of rights reserved.</p>
		</footer>

	</section><!-- /container -->

</body>
</html>
