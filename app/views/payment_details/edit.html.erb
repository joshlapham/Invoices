<section id="edit-payment-details">

	<h3>Edit Payment Details</h3>

	<%= form_for(@payment_detail, :url => {:controller => 'payment_details', :action => 'update', :id => @payment_detail.id}) do |t| %>
		
		<table class="table table-bordered table-condensed table-striped">
            <tr>
                <th>BSB Number</th>
                <td><%= t.text_field(:bsb_number) %></td>
            </tr>
            <tr>
                <th>Account Number</th>
                <td><%= t.text_field(:account_number) %></td>
            </tr>
            <tr>
                <th>ABN Number</th>
                <td><%= t.text_field(:abn_number) %></td>
            </tr>
		</table>

		<%= submit_tag("Update Payment Details", :class => "btn btn-success") %>

	<% end %>

</section>

<br />
